<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	android:gravity="center_vertical" 
	android:orientation="horizontal" 
	android:id="@id/widget_row" 
	android:background="@drawable/border1"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:baselineAligned="false" 
	android:minHeight="@dimen/appwidget_list_item_minHeight" 
	android:paddingStart="@dimen/list_content_padding_left" 
	android:paddingEnd="@dimen/list_content_padding_right"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
	android:gravity="left" 
	android:orientation="horizontal" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
        <TextView 
		android:textAppearance="@style/DINPro_medium_style" 
		android:textSize="12.0sp" 
		android:textColor="@color/appwidget_time" 
		android:layout_gravity="center" 
		android:id="@id/when_time" 
		android:fadingEdgeLength="0.0dip" 
		android:layout_width="33.0dip" 
		android:layout_height="wrap_content" 
		android:includeFontPadding="false" />
		<ImageView 
		android:background="#afffffff"
		android:layout_gravity="center"		
		android:layout_width="1.0sp" 
		android:layout_height="10.0dip" />
    </LinearLayout>
    <LinearLayout 
	android:layout_gravity="center|left" 
	android:orientation="vertical" 
	android:layout_width="200.0dip" 
	android:layout_height="wrap_content" 
	android:layout_marginStart="8.0dip">
        <TextView 
		android:textAppearance="@style/chinese_text_style" 
		android:textSize="16.0sp" 
		android:textColor="@color/appwidget_title_m" 
		android:paddingLeft="10.0dip"  
		android:ellipsize="end" 
		android:id="@id/title" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:singleLine="true" />
        <TextView 
		android:textSize="12.0sp" 
		android:textColor="@color/appwidget_location" 
		android:ellipsize="end" 
		android:id="@id/location" 
		android:visibility="gone" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:singleLine="true" />
    </LinearLayout>
	<LinearLayout 
	android:gravity="left" 
	android:orientation="horizontal" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"  
	android:minHeight="30.0dip">
		<ImageView 
		android:background="#afffffff"
		android:layout_gravity="center"		
		android:layout_width="1.0sp" 
		android:layout_height="10.0dip" />
        <TextView 
		android:textAppearance="@style/DINPro_medium_style" 
		android:textSize="12.0sp" 
		android:textColor="@color/appwidget_when" 
		android:paddingLeft="5dp"
		android:layout_gravity="center" 
		android:id="@id/when_date" 
		android:visibility="gone" 
		android:layout_width="45.0dip" 
		android:layout_height="wrap_content" 
		android:includeFontPadding="false" />
    </LinearLayout>
</LinearLayout>